<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Soft translucent lavender fill -->
    <solid android:color="#22CFC8FF" />

    <!-- Smooth rounded corners -->
    <corners android:radius="18dp" />

    <!-- Elegant glowing border -->
    <stroke
        android:width="1.2dp"
        android:color="#55E0D4FF" />

    <!-- Soft shadow-like padding illusion -->
    <padding
        android:top="4dp"
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp" />
</shape>
